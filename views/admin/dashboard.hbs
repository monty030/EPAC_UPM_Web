<head>
    <script src="//cdnjs.cloudflare.com/ajax/libs/list.js/1.5.0/list.min.js"></script>
    <script type="text/javascript" src="javascripts/dashboard.js"></script>
</head>

<h1 class="title">Welcome to the Admin Dashboard</h1>
<a href="dashboard/refresh-activities" class="btn2 btn3">Refresh Activities!</a>

<div id="activity_list" class="lists">
    <h1 class="subtitle">All activities:</h1>
    {{#if activities}}
    <input id="activity_search" class="search searchbar" placeholder="Search..." />
    <br>
    <span class="sort" data-sort="id">Sort by ID</span>
    <span class="sort" data-sort="title">Sort by Title</span>
    <span class="sort" data-sort="author">Sort by Author</span>
    <span class="sort" data-sort="category">Sort by Category</span>
    <ul class="list activity-grid">
        {{#each activities}}
        <div class="activity-container newpad">
            <li onclick="location.href='{{this.activityLink}}';">
                <h3 class="title">{{this.title}}</h3>
                <h4 class="id">{{this.activityID}}</h4>
                <h4 class="author">{{this.teacherID}}</h4>
                <h4 class="category">{{this.category}}</h4>
                <h4 class="tags">{{this.tags}}</h4>
            </li>
        </div>
        {{/each}}
    </ul>
    {{/if}}
</div>