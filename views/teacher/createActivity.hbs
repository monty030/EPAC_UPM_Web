<form id="activity_form" class="activity_form container student-form" action="/create-activity" method="post">
    <h1 class="title">Create Activity</h1>
    <div>
        <label for="title">Title:</label>
        <input type="text" name="title" id="title" required>
    </div>
    <div>
        <label for="video_link">Link to video:</label>
        <input type="text" name="video_link" id="video_link" required placeholder="https://www.youtube.com/watch?v=">
    </div>
    <div>
        <label for="number_of_questions">Number of questions (Leave on 5 for now):</label>
        <input type="number" name="number_of_questions" id="number_of_questions" onkeyup="changeNumberOfQuestions()"
            required value="5" min="1" max="10">
    </div>
    <div>
        <label for="number_of_attempts">Number of attempts:</label>
        <input type="number" name="number_of_attempts" id="number_of_attempts" required value="3" min="1" max="100">
    </div>
    <div>
        <label for="points_multiplier">Points multiplier (grade obtained * this number = points awarded to
            student):</label>
        <input type="number" name="points_multiplier" id="points_multiplier" required value="10" min="10">
    </div>
    <div>
        <label for="penalisation_per_attempt">Penalisation per attempt (%):</label>
        <input type="number" name="penalisation_per_attempt" id="penalisation_per_attempt" value="20" min="0" max="100">
    </div>
    <div>
        <label for="penalisation_limit">Penalisation limit (%, activity points' multiplier won't be lower than this
            value):</label>
        <input type="number" name="penalisation_limit" id="penalisation_limit" value="50" min="0" max="100">
    </div>

    <div id="questions_container">
        <div id="question_1">
            <br>
            <h3 for="question_text_1">Question 1: </h3>
            <textarea rows="2" cols="40" name="question_text_1" id="question_text_1"
                placeholder="Write the question here"></textarea>
            <br>
            Type:
            <select name="question_type_1" id="question_type_1" onchange="changeQuestionType(this)">
                <option value="test">Test</option>
                <option value="text">Text</option>
            </select>
            <br><br>
            <div id="answer_1">
                <label>Which one is the answer?</label>
                <input type="radio" name="is_answer_1" value="1" required>1
                <input type="radio" name="is_answer_1" value="2" required>2
                <input type="radio" name="is_answer_1" value="3" required>3
                <input type="radio" name="is_answer_1" value="4" required>4
            </div>
            <div id="choices_1" class="choice-number">
